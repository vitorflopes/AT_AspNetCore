@model Core.Models.DetalheUsuario

@{
    ViewData["Title"] = "Details";
}
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <img src="@ViewBag.ImagemPerfil" width="30" height="30" alt="">
        <a class="navbar-brand">Olá, @ViewBag.NomeUsuarioLogado</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alterna navegação">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Feed">Feed</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="CriarPost">Criar Post<span class="sr-only">(Página atual)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="AdicionarAmigo">Adicionar Amigo</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="MinhaListaAmigos">Minha Lista de Amigos</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="EditarUsuario">Editar Perfil</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="DetalhesPerfil">Meu Perfil</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Logoff">Deslogar</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<h1>Detalhes</h1>

<div>
    <h4>Amigo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Foto
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.PathImage)" width="180" height="240">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimeiroNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimeiroNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SegundoNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SegundoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssuntosDeInteresse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssuntosDeInteresse)
        </dd>
    </dl>
</div>